<% include ../partials/header %>


<div class="container">
  <div class="jumbotron">
    <h1 class="display-4">Welcome to YelpCamp</h1>
    <p class="lead">View our hand-picked campgrounds from all over the world</p>
    <hr class="my-4">
    <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add a new campground</a>
  </div>
  <div class="row text-center">
    <% campgrounds.forEach(function(campground) { %>
      <div class="col-sm-6 col-md-3">
        <div class="card" style="margin-bottom: 10px;">
          <img src="<%= campground.image %>" class="card-img-top">
          <div class="card-body">
            <h5 class="card-title"><%= campground.name %></h5>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
          </div>
        </div>
      </div>
    <% }); %>
    </div>
  <a href="/">Go back</a>
</div>
<% include ../partials/footer %>
